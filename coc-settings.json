{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"]
    },
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gdscript"],
      "port": 6008
    }
  },
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "javascript", "Markdown", "python", "typescript", "typescriptreact", "javascript", "javascriptreact"],
  "python.formatting.provider": "blackd",
  "python.linting.flake8Enabled": true,
  "pyright.testing.provider": "pytest",
  "suggest.noselect": true,
  "semanticTokens.enable": true,
  "semanticTokens.filetypes": ["rust", "javascript", "python"]
}
